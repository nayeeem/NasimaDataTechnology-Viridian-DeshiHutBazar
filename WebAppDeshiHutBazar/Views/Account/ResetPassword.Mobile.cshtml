@model WebDeshiHutBazar.AccountViewModel
@{
    ViewBag.Title = Common.Language.LanguageDefault.ViewBagTitmeResetPassword;
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
    ViewBag.ExcludeHeader = false;
}
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6 col-xs-12 col-sm-offset-2 col-sm-10 col-lg-offset-3 col-lg-6 card-form">
            <h4 class="sub-title">@Common.Language.LanguageDefault.ResetPassword</h4>
            @using (Html.BeginForm("EmailResetPassword", "Account"))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                        <input name="Email"
                               type="email"
                               class="fff"
                               placeholder="Email"
                               value="@Model.Email"
                               style="padding-left:7px;" />
                    </div>
                    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                        <button id="btnResetPassword"
                                class="primary-button"
                                type="submit">
                            @Common.Language.LanguageDefault.LoginButtonReset
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="gap"></div>




@section scriptsapp {
    <script type="text/javascript">
        PAGE_NAME = '@Model.PageName';
    </script>
    <script src="~/Scripts/js/UserSession/naimul.letitgo.user.session.js" type="text/javascript"></script>
    <script src="~/Scripts/js/Account/naimul.ui.resetpassword.js" type="text/javascript"></script>
    <script src="~/Scripts/js/naimul.ui.editor.phone.js" type="text/javascript"></script>
    <script src="~/Scripts/js/naimul.ui.editor.price.js" type="text/javascript"></script>
    <script src="~/Scripts/js/naimul.ui.password.validation.js" type="text/javascript"></script>
    <script src="~/Scripts/js/naimul.ui.validation.js" type="text/javascript"></script>
}


