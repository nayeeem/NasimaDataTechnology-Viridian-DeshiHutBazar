@model System.Byte[]
@if (Model != null && Model.Length > 1)
{
    string imageBase64 = Convert.ToBase64String(Model);
    string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
    <img src="@imageSrc"
         class="img-responsive"
         alt="This image is provided with the Ad uploaded by advertiser!"  />
}
else
{
    <img class="img-responsive"
         src="~/Images/Post/camera.png"
         alt="Image not available!"  />
}

