@model WebDeshiHutBazar.TemplateDisplayViewModel
@if (Model != null)
{
    if (!string.IsNullOrEmpty(Model.Title))
    {
        <a href="@Model.PostItemDetailViewUrl" 
           target="_blank" 
           class="thumbnail @Model.ImageCategoryClass">
            @if (Model.Image != null)
            {
                @Html.Partial("../Shared/DesktopPostType/_Image", Model.Image);
            }
            else
            {
                <img src="~/Images/Home/fabia-service.jpg" 
                     class="img-responsive" 
                     alt="Responsive image" 
                     style="width:100%;max-height:100%;max-width:100%;height:100%;" />
            }
        </a>
        <div class="caption text-center">
            <div class="truncate">
                @Model.Title
            </div>
            <div class="home-currency-font-color">
                FABIA SERVICE
            </div>
        </div>
    }
}
