    <i class="glyphicon glyphicon-menu-right fixed-right-fabia-btn fabia-btn" ></i>

    <i id="btnFabia"
       class="fas fa-address-card fabia-btn" style="display:none;">
        @Common.Language.LanguageResource.ButtonTextFabia
    </i>
    <i class="fas fa-tree fabia-btn"
       id="btnCat" style="display:none;">
        @Common.Language.LanguageResource.ButtonTextMarkets
    </i>
    <i class="fas fa-mountain fabia-btn"
