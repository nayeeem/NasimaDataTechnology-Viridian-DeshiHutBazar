@model WebDeshiHutBazar.BikashBillTransactonViewModel

@{
    ViewBag.Title = Common.Language.LanguageDefault.ViewBagTitleRecharge;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ExcludeHeader = false;
}

<div class="container">
    <div class="row">
        <h4 class="main-title">
            @Common.Language.LanguageDefault.RechargeAccount
        </h4>
        <p class="note">
            <b>NOTE:</b>
            Please go to nearest Bkash Agent and pay to 0174 2600 276 Or 0176 5805 853.
            You can pay from your personal Bkash account also.
            After this form has been filled up , we update account balance or subscription packages within next 1 Hour.
            For any issues, please call at: 0167 7645 958.
        </p>
            <h5 class="sub-title">
                @Common.Language.LanguageDefault.BikashDetails11
            </h5>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.BikashBillId)
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.PostId)
                @Html.HiddenFor(model => model.AgentNumber)
                @Html.HiddenFor(model => model.SubCatId)
                @Html.HiddenFor(model => model.PayableAmount)
                @Html.HiddenFor(model => model.DisplayCurrency)
                @Html.HiddenFor(model => model.AgentNumber)

                <div class="input-field col-md-4 col-xs-12">
                    @Html.LabelFor(model => model.PayableAmount)
                    @Html.EditorFor(model => model.PayableAmount, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
                </div>
                <div class="input-field col-md-4 col-xs-12">
                    @Html.LabelFor(model => model.DisplayCurrency)
                    @Html.EditorFor(model => model.DisplayCurrency, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
                </div>
                <div class="input-field col-md-4 col-xs-12">
                    @Html.LabelFor(model => model.AgentNumber)
                    @Html.EditorFor(model => model.AgentNumber, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
                </div>
                <div class="input-field col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.TransactionNumber)
                    @Html.EditorFor(model => model.TransactionNumber, new { htmlAttributes = new { @class = "fff" } })
                    @Html.ValidationMessageFor(model => model.TransactionNumber, "", new { @class = "custom-inline-field-error" })
                </div>
                <div class="input-field col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.PaidAmount)
                    @Html.EditorFor(model => model.PaidAmount, new { htmlAttributes = new { @class = "fff" } })
                    @Html.ValidationMessageFor(model => model.PaidAmount, "", new { @class = "custom-inline-field-error" })
                </div>
                <div class="gap col-xs-12"></div>
                <div class="submit-field col-md-6 col-md-offset-3 col-xs-12">
                    <input type="submit"
                           value="@Common.Language.LanguageDefault.RECHARGE"
                           class="primary-button col-md-6" />
                </div>
            }
    </div>
</div>
@section scriptsapp {
    <script type="text/javascript">
        PAGE_NAME = '@Model.PageName';
    </script>
    <script src="~/Scripts/js/naimul.ui.editor.phone.js" type="text/javascript"></script>
    <script src="~/Scripts/js/naimul.ui.editor.price.js" type="text/javascript"></script>
    <script src="~/Scripts/js/naimul.ui.validation.js" type="text/javascript"></script>
    <script src="~/Scripts/js/UserSession/naimul.letitgo.user.session.js" type="text/javascript"></script>
}




