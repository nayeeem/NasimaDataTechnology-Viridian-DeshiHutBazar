@model WebDeshiHutBazar.AccountViewModel
@{
    ViewBag.Title = Common.Language.LanguageDefault.ViewBagTitleManageAccount;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ExcludeHeader = false;
}

<div id="SigninRoot"
     class="container">
    <div class="row">
        <h4 class="main-title">
            @Common.Language.LanguageDefault.H3ManageAccount
        </h4>
        <ul class="nav nav-tabs new-nav-tabs"
            role="tablist">
            <li role="presentation"
                class="active">
                <a id="ancrAccount"
                   aria-controls="account"
                   role="tab"
                   data-toggle="tab">
                    &nbsp;
                    @Common.Language.LanguageDefault.AAccountDetail
                </a>
            </li>
            <li role="presentation">
                <a id="ancrMyPackage"
                   aria-controls="package"
                   role="tab"
                   data-toggle="tab">
                    &nbsp;
                    @Common.Language.LanguageDefault.AMySubscription
                </a>
            </li>
            <li role="presentation">
                <a id="ancrMyBill"
                   aria-controls="bill"
                   role="tab"
                   data-toggle="tab">
                    &nbsp;
                    @Common.Language.LanguageDefault.AMyBills
                </a>
            </li>
            <li role="presentation">
                <a id="ancrPassword"
                   aria-controls="password"
                   role="tab"
                   data-toggle="tab">
                    &nbsp;
                    @Common.Language.LanguageDefault.AChangePassword
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel"
                 class="tab-pane active form-horizontal"
                 id="account">
                @Html.Partial("../../Areas/Advertizer/Views/AccountSettings/_MyAccount", Model)
            </div>
            <div role="tabpanel"
                 class="tab-pane form-horizontal"
                 id="package">
                @Html.Partial("../../Areas/Advertizer/Views/AccountSettings/_MySubscriptions", Model)
            </div>
            <div role="tabpanel"
                 class="tab-pane form-horizontal"
                 id="bill">
                @Html.Partial("../../Areas/Advertizer/Views/AccountSettings/_MyBills", Model)
            </div>
            <div role="tabpanel"
                 class="tab-pane form-horizontal"
                 id="password">
                @Html.Partial("../../Areas/Advertizer/Views/AccountSettings/_ChangePassword", Model)
            </div>
        </div>
    </div>
</div>
@section scriptsapp {
    <script type="text/javascript">
        PAGE_NAME = '@Model.PageName';
    </script>
    <script src="~/Scripts/js/naimul.ui.editor.phone.js" type="text/javascript"></script>
    <script src="~/Scripts/js/naimul.ui.editor.price.js" type="text/javascript"></script>
    <script src="~/Scripts/js/naimul.ui.password.validation.js" type="text/javascript"></script>
    <script src="~/Scripts/js/naimul.ui.validation.js" type="text/javascript"></script>
    <script src="~/Scripts/js/Account/naimul.ui.manageaccount.js" type="text/javascript"></script>
    <script src="~/Scripts/js/UserSession/naimul.letitgo.user.session.js" type="text/javascript"></script>

}


