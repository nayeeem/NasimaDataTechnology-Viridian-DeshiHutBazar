                    <a href="@Url.Action("DownloadFile","Image")?fileID=@file&postID=@Model.PostID"
                       class="light-button">
                        DOWNLOAD
                    </a>
                }
            }
        </div>
        <div class="col-md-3">
            @if (Model.ListImages != null && Model.ListImages.Count > 3)
            {
                if (Model.ListImages[3] != null)
