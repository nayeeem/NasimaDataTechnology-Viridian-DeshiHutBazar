@model WebDeshiHutBazar.PostPackageConfigurationViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ExcludeHeader = false;
}

<div class="container">
    <h4 class="main-title">Package Details</h4>
    <div class="row">
        <h5 class="sub-title">Package:</h5>
        <div class="input-field col-md-6">
            @Html.LabelFor(model => model.PackageName)
            @Html.EditorFor(model => model.PackageName, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
        </div>
        <div class="input-field col-md-6">
            @Html.LabelFor(model => model.PackagePrice)
            @Html.EditorFor(model => model.PackagePrice, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
        </div>
        <div class="input-field col-md-12">
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
        </div>
        <div class="input-field col-md-6">
            @Html.LabelFor(model => model.TotalFreePost)
            @Html.EditorFor(model => model.TotalFreePost, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
        </div>
        <div class="input-field col-md-6">
            @Html.LabelFor(model => model.Discount)
            @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
        </div>
        <div class="input-field col-md-6">
            @Html.LabelFor(model => model.DisplaySubscriptionPeriod)
            @Html.EditorFor(a => a.SubscriptionPeriod, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
        </div>
        <div class="input-field col-md-6">
            @Html.LabelFor(model => model.DisplayPackageType)
            @Html.EditorFor(a => a.PackageType, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
        </div>
        <div class="input-field col-md-6">
            @Html.LabelFor(model => model.DisplayPackageStatus)
            @Html.EditorFor(a => a.PackageStatus, new { htmlAttributes = new { @class = "fff", disabled = "disabled" } })
        </div>

        <div class="submit-field col-md-6">
            <a href="@Url.Action("Edit","PackageConfiguration", new { id = Model.PackageConfigID })" class="primary-button">EDIT</a>
        </div>
        <div class="submit-field col-md-6">
            <a href="@Url.Action("Index","PackageConfiguration")" class="light-button">BACK TO LIST</a>
        </div>

    </div>
</div>

@section scriptsapp {
    <script type="text/javascript">
        PAGE_NAME = '@Model.PageName';
    </script>
    <script src="~/Scripts/js/UserSession/naimul.letitgo.user.session.js" type="text/javascript"></script>
}




