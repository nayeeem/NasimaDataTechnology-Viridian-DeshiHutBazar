@model WebDeshiHutBazar.PostViewModel
@{
    var formid = Guid.NewGuid();
}
@if (!string.IsNullOrEmpty(Model.WebsiteUrl))
{
    <div class="row" id="postviewroot-@formid">
        <div class="col-md-12 col-xs-12 col-lg-12">
            <iframe style="width:100%;height:450px;max-height:450px;"
                    src="https://www.youtube.com/embed/@Model.WebsiteUrl.Trim()"
                    frameborder="0"
                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
        </div>
    </div>
}