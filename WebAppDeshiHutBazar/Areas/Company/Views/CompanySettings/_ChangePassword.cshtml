@model WebDeshiHutBazarAccountViewModel
<div class="card-form row">
    <h4 class="sub-title">Change Password</h4>
    <div class="input-field col-md-4 col-xs-12 col-sm-4 col-lg-4">
        <label for="CurrentPassword">
            @Common.Language.LanguageDefault.CurrentPassword
        </label>
        @Html.PasswordFor(a => a.CurrentPassword, new { @class = "fff" })
    </div>
    <div class="input-field col-md-4 col-xs-12 col-sm-4 col-lg-4">
        <label for="Password">
            @Common.Language.LanguageDefault.NewPassword
        </label>
        @Html.PasswordFor(a => a.Password, new { @class = "fff" })
    </div>
    <div class="input-field col-md-4 col-xs-12 col-sm-4 col-lg-4">
        <label for="RePassword">
            @Common.Language.LanguageDefault.RetypeNewPassword
        </label>
        @Html.PasswordFor(a => a.RePassword, new { @class = "fff" })
    </div>
</div>